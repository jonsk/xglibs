#!/bin/bash
#
# Xiange Linux build scripts

# Short one-line description of this package.
DESCRIPTION="Library for arithmetic on arbitrary precision integers, rational numbers, and floating-point numbers"

# Homepage, not used by Portage directly but handy for developer reference
HOMEPAGE="http://gmplib.org/"

# Point to any required sources; these will be automatically downloaded by
# gpkg. 
# $N = package name, such as autoconf, x-org
# $V = package version, such as 2.6.10

#SRC_URI="http://foo.bar.com/$N-$V.tar.bz2"
SRC_URI="ftp://ftp.gnu.org/gnu/gmp/$N-$V$R.tar.bz2"


# Binary package URI.
BIN_URI=""


# Runtime Depend
RDEPEND=""

# Build time depend
DEPEND="${RDEPEND}"


#unpack
xgb_unpack()
{
	#unpard file from $XGPATH_SOURCE to current directory.
	echo "Unpacking ..."
	tar xf $XGPATH_SOURCE/$N-$V$R.tar.bz2
}

#config
xgb_config()
{
	#cd build directory.
	cd $N-$V$R
	mv config{fsf,}.guess
	mv config{fsf,}.sub

	export CPPFLAGS="$CPPFLAGS -fexceptions"	

	#run configure
	XGB_CONFIG+="--prefix=/usr --enable-cxx --enable-mpbsd "

#	ABI=n32 CPPFLAGS=-fexceptions \
#	CC="gcc -isystem /usr/include" CXX="g++ -isystem /usr/include" \
#	LDFLAGS="-Wl,-rpath-link,/lib32" ./configure $XGB_CONFIG
	ABI=n32 ./configure $XGB_CONFIG
}

#build
xgb_build()
{
	#run make in current directory
	make 
	err_check "make gmp failed."

	make check
}

#install
xgb_install()
{
	#install everything to $XGPATH_DEST
	make DESTDIR="$XGPATH_DEST" install
}


